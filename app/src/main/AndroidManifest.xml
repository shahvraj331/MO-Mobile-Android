<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.restaurantmanagement">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RestaurantManagement">
        <activity
            android:name=".activities.Login"
            android:exported="true" />
        <activity
            android:name=".activities.SignupActivity"
            android:exported="true" />
        <activity
            android:name=".tutorial.AuthenticatorBaseActivity"
            android:exported="false" />
        <activity
            android:name=".tutorial.TutorialScreenEnd"
            android:exported="false" />
        <activity
            android:name=".tutorial.TutorialScreenMid"
            android:exported="false" />
        <activity
            android:name=".tutorial.TutorialScreenStart"
            android:exported="true">
        </activity>
        <activity
            android:name=".activities.BottomNavigation"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="false"/>
    </application>

</manifest>